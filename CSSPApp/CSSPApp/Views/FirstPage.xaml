<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSSPApp.Views.FirstPage"
             xmlns:res="clr-namespace:CSSPApp.Resources.Strings"
             xmlns:vm="clr-namespace:CSSPApp.ViewModels"
             x:DataType="vm:FirstPageViewModel"
             Title="FirstPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{x:Static res:FirstPageRes.FirstMessage}" />
        <Label Text="{x:Static res:FirstPageRes.Title}" />
    </VerticalStackLayout>
</ContentPage>